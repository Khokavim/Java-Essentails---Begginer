package Tutorials;

import java.io.IOException;
import java.lang.reflect.Array;

public class ExceptionsTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	  int[] array= {};

      exceptions(-1, array); //Dynamic constructor args (must be great)
      System.out.println("Hello");
      
	}
	
	public static int exceptions(int k, int[] array) {
    	for(int i=k; i < Array.getLength(array);i = k-i) { //Value K must be greater i in all cases. It would throw an IndexOutOfBoundsException if k is less tha i 
    		//Run a clean code here
    	}
    	return k;
    }

}
